<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.FoodApp.Starting" parent="Theme.SplashScreen.IconBackground">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="windowSplashScreenAnimationDuration">500</item>
        <item name="postSplashScreenTheme">@style/Theme.FoodApp.Main</item>
    </style>

    <style name="Theme.FoodApp.Main" parent="Theme.FoodApp.Base">
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorStatusBar</item>
        <item name="android:navigationBarColor">
            #B3000000
        </item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.FoodApp.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="android:colorBackground">@color/colorSurface</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimaryDark</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="windowActionModeOverlay">true
        </item> <!--for proper work of action mode in edge to edge design-->
        <item name="actionModeStyle">@style/Widget.FoodApp.ActionMode
        </item> <!--for paint action mode title to bright colors-->
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar
        </item> <!--for paint action mode and toolbar icons to bright colors-->
    </style>

    <style name="Theme.FoodApp.Details.Main" parent="Theme.FoodApp.Details.Base">
        <item name="android:statusBarColor">@color/colorStatusBar</item>
        <item name="android:navigationBarColor">
            #B3000000
        </item>
    </style>

    <style name="Theme.FoodApp.Details.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorPrimaryDark</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

</resources>