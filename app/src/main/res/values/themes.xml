<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.FoodApp.Starting" parent="Theme.SplashScreen.IconBackground">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="windowSplashScreenAnimationDuration">500</item>
        <item name="postSplashScreenTheme">@style/Theme.FoodApp.Main</item>
    </style>

    <style name="Theme.FoodApp.Main" parent="Theme.FoodApp.Base">
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorStatusBar</item>
        <item name="android:navigationBarColor">
            #B3000000
        </item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.FoodApp.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brown_400</item>
        <item name="colorPrimaryVariant">@color/brown_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey_600</item>
        <item name="colorSecondaryVariant">@color/grey_dark</item>
        <!-- Color on brand color. -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Color surfaces -->
        <item name="android:windowBackground">@color/lightGray</item>
        <item name="colorSurface">@color/white</item>

        <!--various colors-->
        <item name="colorShimmer">@color/lightMediumGray</item>
        <item name="colorScreenPlaceHolder">@color/mediumGray</item>
        <item name="colorItemSelection">@color/primary_color_25</item>

        <item name="windowActionModeOverlay">true
        </item> <!--for proper work of action mode in edge to edge design-->
<!--        <item name="actionModeStyle">@style/Widget.FoodApp.ActionMode-->
<!--        </item> &lt;!&ndash;for paint action mode title to bright colors&ndash;&gt;-->
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar
        </item> <!--for paint action mode and toolbar icons to bright colors-->
    </style>

    <style name="Theme.FoodApp.Details.Main" parent="Theme.FoodApp.Details.Base">
        <item name="android:statusBarColor">@color/colorStatusBar</item>
        <item name="android:navigationBarColor">
            #B3000000
        </item>
    </style>

    <style name="Theme.FoodApp.Details.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brown_400</item>
        <item name="colorPrimaryVariant">@color/brown_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey_600</item>
        <item name="colorSecondaryVariant">@color/grey_dark</item>
        <!-- Color on brand color. -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Color surfaces -->
        <item name="android:windowBackground">@color/white</item>
        <item name="colorSurface">@color/lightGray</item>
    </style>

</resources>