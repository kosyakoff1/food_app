<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.FoodApp.Starting" parent="Theme.SplashScreen.IconBackground">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="windowSplashScreenAnimationDuration">100</item>
        <item name="postSplashScreenTheme">@style/Theme.FoodApp.Main</item>
    </style>

    <style name="Theme.FoodApp.Main" parent="Theme.FoodApp.Base">
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorStatusBar</item>
        <item name="android:navigationBarColor">
            #B3FFFFFF
        </item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.FoodApp.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="android:colorBackground">@color/colorSurface</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimaryDark</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/Widget.FoodApp.ActionMode
        </item> <!--for paint action mode title to bright colors-->
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar
        </item> <!--for paint action mode icons to bright colors-->
    </style>

    <style name="Theme.FoodApp.Details.Main" parent="Theme.FoodApp.Details.Base">
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorStatusBar</item>
        <item name="android:navigationBarColor" tools:targetApi="l">
            #B3FFFFFF
        </item>
    </style>

    <style name="Theme.FoodApp.Details.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorPrimaryDark</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
    </style>

    <style name="Theme.FoodApp.ChipGroup" parent="Widget.MaterialComponents.ChipGroup">
        <item name="chipStyle">@style/Widget.FoodApp.Chip.Filter</item>
    </style>

    <style name="Widget.FoodApp.Chip.Filter" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconTint">@color/chip_text_color</item>
    </style>

    <style name="Widget.FoodApp.TabLayout.DetailsActivity" parent="Widget.Design.TabLayout">
        <item name="background">@color/actionBarBackgroundColor</item>
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="Widget.FoodApp.TabText.DetailsActivity" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.FoodApp.Toolbar.MainActivity" parent="Widget.MaterialComponents.ActionBar.Surface">
        <item name="colorControlNormal">@color/white</item>
        <item name="android:editTextColor">@android:color/white</item>
    </style>

    <style name="Widget.FoodApp.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="titleTextStyle">@style/TextAppearance.FoodApp.Widget.ActionMode.Title</item>
    </style>

    <style name="WidgetOverlay.FoodApp.TextView.FragmentOverview" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/recipesIconDefaultColor</item>
        <item name="maxLines">1</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="WidgetOverlay.FoodApp.ImageView.FragmentOverview" parent="">
        <item name="srcCompat">@drawable/ic_check_mark</item>
        <item name="tint">@color/recipesIconDefaultColor</item>
    </style>


</resources>