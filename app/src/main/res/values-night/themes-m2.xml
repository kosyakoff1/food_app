<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.FoodApp.Starting" parent="Theme.SplashScreen.IconBackground">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="windowSplashScreenAnimationDuration">100</item>
        <item name="postSplashScreenTheme">@style/Theme.FoodApp.Main</item>
    </style>

    <style name="Theme.FoodApp.Main" parent="Theme.FoodApp.Base">
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorStatusBar</item>
        <item name="android:navigationBarColor">
            #B3FFFFFF
        </item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.FoodApp.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brown_light</item>
        <item name="colorPrimaryVariant">@color/brown_400</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey_light</item>
        <item name="colorSecondaryVariant">@color/grey_600</item>
        <!-- Color on brand color. -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnSurface">@color/white</item>

        <!-- Color surfaces -->
        <item name="android:windowBackground">@color/app_darker_grey</item>
        <item name="colorSurface">@color/app_dark_grey</item>

        <!--various colors-->
        <item name="colorShimmer">@color/app_medium_grey</item>
        <item name="colorScreenPlaceHolder">@color/app_light_grey</item>
        <item name="colorItemSelection">@color/primary_color_10</item>

        <item name="windowActionModeOverlay">true
        </item> <!--for proper work of action mode in edge to edge design-->
    </style>

    <style name="Theme.FoodApp.Details.Main" parent="Theme.FoodApp.Details.Base">
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorStatusBar</item>
        <item name="android:navigationBarColor" tools:targetApi="l">
            #B3FFFFFF
        </item>
    </style>

    <style name="Theme.FoodApp.Details.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brown_light</item>
        <item name="colorPrimaryVariant">@color/brown_400</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey_light</item>
        <item name="colorSecondaryVariant">@color/grey_600</item>
        <!-- Color on brand color. -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnSurface">@color/white</item>

        <!-- Color surfaces -->
        <item name="android:windowBackground">@color/app_darker_grey</item>
        <item name="colorSurface">@color/app_dark_grey</item>
    </style>
</resources>